@using EventBokningApp.Models

<div class="event-card">
    <div class="event-card-header">
        <span class="event-date-badge">
            <span class="date-day">@Event.Date.ToString("dd")</span>
            <span class="date-month">@Event.Date.ToString("MMM")</span>
        </span>
        <span class="event-time">@Event.Date.ToString("HH:mm")</span>
    </div>
    <div class="event-card-body">
        <h3 class="event-title">@Event.Name</h3>
        <p class="event-description">@(Event.Description.Length > 100 ? Event.Description[..100] + "..." : Event.Description)</p>
        <div class="event-meta">
            <span class="meta-item">
                <span class="meta-icon">üìç</span>
                @Event.Venue?.Name, @Event.Venue?.City
            </span>
            <span class="meta-item">
                <span class="meta-icon">üë•</span>
                @Event.Venue?.Capacity platser
            </span>
        </div>
        @if (Event.Tickets.Any())
        {
            <div class="ticket-price-range">
                @{
                    var minPrice = Event.Tickets.Min(t => t.Price);
                    var maxPrice = Event.Tickets.Max(t => t.Price);
                }
                <span class="price-from">fr√•n</span>
                <span class="price-amount">@minPrice.ToString("N0") kr</span>
                @if (minPrice != maxPrice)
                {
                    <span class="price-to">‚Äì @maxPrice.ToString("N0") kr</span>
                }
            </div>
        }
    </div>
    <div class="event-card-footer">
        <a href="/events/@Event.Id" class="btn-book-now">Boka nu ‚Üí</a>
    </div>
</div>

@code {
    [Parameter, System.Diagnostics.CodeAnalysis.NotNull]
    public Event Event { get; set; } = null!;
}
