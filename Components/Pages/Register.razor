@page "/register"
@inject IAuthService AuthService
@inject BlazorAuthService BlazorAuth
@inject NavigationManager Nav

<PageTitle>Registrera ‚Äì Bokningssystem</PageTitle>

<div class="auth-page">
    <div class="auth-card">
        <div class="auth-logo">
            <span class="logo-icon">üéüÔ∏è</span>
            <h1 class="auth-title">Skapa konto</h1>
            <p class="auth-subtitle">Kom ig√•ng p√• bara en minut</p>
        </div>

        @if (!string.IsNullOrEmpty(errorMessage))
        {
            <div class="alert-error">
                <span>‚ö†Ô∏è</span> @errorMessage
            </div>
        }

        <EditForm Model="registerModel" OnValidSubmit="HandleRegister">
            <DataAnnotationsValidator />

            <div class="form-group">
                <label class="form-label">Anv√§ndarnamn</label>
                <InputText class="form-input" @bind-Value="registerModel.Username" placeholder="ditt_namn" />
                <ValidationMessage For="@(() => registerModel.Username)" class="validation-msg" />
            </div>

            <div class="form-group">
                <label class="form-label">E-postadress</label>
                <InputText class="form-input" @bind-Value="registerModel.Email" placeholder="din@email.com" type="email" />
                <ValidationMessage For="@(() => registerModel.Email)" class="validation-msg" />
            </div>

            <div class="form-group">
                <label class="form-label">L√∂senord</label>
                <InputText class="form-input" @bind-Value="registerModel.Password" placeholder="Minst 6 tecken" type="password" />
                <ValidationMessage For="@(() => registerModel.Password)" class="validation-msg" />
            </div>

            <button type="submit" class="btn-primary-full" disabled="@isLoading">
                @if (isLoading)
                {
                    <span class="spinner"></span>
                    <span>Skapar konto...</span>
                }
                else
                {
                    <span>Registrera</span>
                }
            </button>
        </EditForm>

        <div class="auth-footer">
            <p>Har du redan konto? <a href="/login" class="link-orange">Logga in</a></p>
        </div>
    </div>
</div>

@code {
    private RegisterModel registerModel = new();
    private string? errorMessage;
    private bool isLoading = false;

    private async Task HandleRegister()
    {
        isLoading = true;
        errorMessage = null;
        try
        {
            var result = await AuthService.RegisterAsync(new DTOs.RegisterDto(
                registerModel.Username, registerModel.Email, registerModel.Password));
            BlazorAuth.SetUser(result);
            Nav.NavigateTo("/");
        }
        catch (Exceptions.BusinessException ex)
        {
            errorMessage = ex.Message;
        }
        catch
        {
            errorMessage = "N√•got gick fel. F√∂rs√∂k igen.";
        }
        finally
        {
            isLoading = false;
        }
    }

    private class RegisterModel
    {
        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "Anv√§ndarnamn kr√§vs")]
        [System.ComponentModel.DataAnnotations.MaxLength(100, ErrorMessage = "Max 100 tecken")]
        public string Username { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "E-post kr√§vs")]
        [System.ComponentModel.DataAnnotations.EmailAddress(ErrorMessage = "Ogiltig e-postadress")]
        public string Email { get; set; } = string.Empty;

        [System.ComponentModel.DataAnnotations.Required(ErrorMessage = "L√∂senord kr√§vs")]
        [System.ComponentModel.DataAnnotations.MinLength(6, ErrorMessage = "Minst 6 tecken")]
        public string Password { get; set; } = string.Empty;
    }
}
