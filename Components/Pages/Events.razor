@page "/events"
@inject AppDbContext Db

<PageTitle>Events</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Events</h1>
    <div>
        <button class="btn @(showUpcomingOnly ? "btn-primary" : "btn-outline-primary")"
                @onclick="ToggleFilter">
            @(showUpcomingOnly ? "Visa alla" : "Visa kommande")
        </button>
    </div>
</div>

@if (events is null)
{
    <div class="text-center"><div class="spinner-border" role="status"></div></div>
}
else if (!events.Any())
{
    <div class="alert alert-info">Inga events hittades. Skapa ett via API:t.</div>
}
else
{
    <div class="row">
        @foreach (var e in events)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
                    <div class="card-header bg-primary text-white">
                        @e.Date.ToString("dd MMM yyyy â€“ HH:mm")
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@e.Name</h5>
                        <p class="card-text text-muted">@e.Description</p>
                        <p class="mb-1"><small><strong>ğŸ“</strong> @e.Venue.Name, @e.Venue.City</small></p>
                        <p><small><strong>ğŸ‘¥</strong> Kapacitet: @e.Venue.Capacity</small></p>
                    </div>
                    <div class="card-footer">
                        <a href="/events/@e.Id" class="btn btn-primary w-100">Visa & Boka</a>
                    </div>
                </div>
            </div>
        }
    </div>
}

@code {
    private List<Event>? events;
    private bool showUpcomingOnly = false;

    protected override async Task OnInitializedAsync() => await LoadEvents();

    private async Task ToggleFilter()
    {
        showUpcomingOnly = !showUpcomingOnly;
        await LoadEvents();
    }

    private async Task LoadEvents()
    {
        var query = Db.Events.Include(e => e.Venue).AsQueryable();
        if (showUpcomingOnly)
            query = query.Where(e => e.Date > DateTime.UtcNow);

        events = await query.OrderBy(e => e.Date).ToListAsync();
    }
}
